<div id="project-history" class="min-w-full mt-6 border-t border-t-gray-200 py-4">
  <h2 class="font-bold text-2xl">Project conversation history</h2>
  <% if history.length > 0 %>
    <div class="mt-6 space-y-6">
      <% history.each do |entry| %>
        <%= render entry %>
      <% end %>
    </div>
  <% else %>
    <p class="my-10">No project conversation history yet.</p>
  <% end %>
  </div>
